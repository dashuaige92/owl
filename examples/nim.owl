bool running = True
int[] stacks = [3, 4, 5]

bool gameOver() {
    int s
    for s in stacks {
        if (s != 0) {
            return False
        }
    }
    return True
}

machine nim = {
    node start
    node move

    start() -> move

    enter(move) {
        print("\n")
        print("")
        print("Current stacks:")
        int s
        for s in stacks {
            print(toString(s) + " ")
        }
        print("Remove X chips from stack Y (X, Y): ")
    }

    # Need regex support
    move("(\d+),\s*(\d+)") -> move {
        int chips = toInt(groups(0))
        int s = toInt(groups(1))

        if (s >= 3) {
            print("There aren't that many stacks...")
            return
        }
        if (stacks[s] < chips) {
            print("That stack isn't that big...")
            return
        }
        stacks[s] -= chips
        if (gameOver()) {
            print("You win!")
            running = False
        }
    }

    move() -> move {
        print("Invalid input")
    }
}

nim.step("Start")
while (running) {
    nim.step(input(""))
}
